<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.asynctask.MainActivity">

    <Button
        android:id="@+id/neuf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-8dp"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/huit"
        app:layout_constraintTop_toTopOf="@+id/huit" />

    <Button
        android:id="@+id/huit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="-3dp"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/sept"
        app:layout_constraintTop_toTopOf="@+id/sept" />

    <Button
        android:id="@+id/sept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-8dp"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/cinq"
        app:layout_constraintTop_toTopOf="@+id/cinq" />

    <Button
        android:id="@+id/cinq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/quatre"
        app:layout_constraintTop_toTopOf="@+id/quatre" />

    <Button
        android:id="@+id/quatre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="@+id/sept"
        app:layout_constraintTop_toBottomOf="@+id/sept" />

    <Button
        android:id="@+id/trois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/deux"
        app:layout_constraintTop_toTopOf="@+id/deux" />

    <Button
        android:id="@+id/deux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/un"
        app:layout_constraintTop_toTopOf="@+id/un" />

    <Button
        android:id="@+id/un"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-11dp"
        android:layout_marginTop="10dp"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="@+id/quatre"
        app:layout_constraintTop_toBottomOf="@+id/quatre" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/un"
        app:layout_constraintTop_toBottomOf="@+id/un" />

    <TextView
        android:id="@+id/etage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etage"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/zero"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/zero" />

    <TextView
        android:id="@+id/floor_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/etage"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@+id/etage"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/etage"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
